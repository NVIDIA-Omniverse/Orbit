# Reference:
# https://github.com/NVIDIA-Omniverse/IsaacSim-dockerfiles/blob/main/Dockerfile.2022.1.1-ubuntu20.04
#
# Build the image:
# docker-compose build
#
# Run the container:
# docker-compose up
#
# More info:
# https://isaac-orbit.github.io/orbit/source/setup/installation.html
#
FROM isaac-sim:2022.1.1-ubuntu20.04

# Install dependencies
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    git \
    ncurses-term \
    python3-pip \
&& apt-get -y autoremove \
&& apt-get clean autoclean \
&& rm -rf /var/lib/apt/lists/*

# Set environment variables
ENV ISAACSIM_PATH="/isaac-sim"
ENV ISAACSIM_PYTHON_EXE="${ISAACSIM_PATH}/python.sh"

# Install and configure Orbit
COPY . ./Orbit
WORKDIR /isaac-sim/Orbit
RUN ln -s ${ISAACSIM_PATH} _isaac_sim \
    # instead of alias use a bash script (docker exec doesn't find alias)
    && cp /isaac-sim/Orbit/.docker/scripts/orbit /bin/orbit \
    && chmod +x /bin/orbit

# install extra packages
RUN orbit --install && orbit --extra
